 print("Ejercicio 22")
x = int(input("Introduce un número par calcular sus divisores: "))
y = 1
print("Los divisores de " + str(x) + " son:")
while x >= y:
    if x % y == 0:
        print(str(y))
        y = y + 1
    else:
        y = y + 1

